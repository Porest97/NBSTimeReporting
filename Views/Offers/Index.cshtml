                @Html.DisplayFor(modelItem => item.DateTimeScheduledEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursOnSite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KostHours)
            </td>
