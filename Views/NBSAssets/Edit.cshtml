@model NBSTimeReporting.NBSInventory.Models.DataModels.NBSAsset

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>NBSAsset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NBSAssetNumber" class="control-label"></label>
                <input asp-for="NBSAssetNumber" class="form-control" />
                <span asp-validation-for="NBSAssetNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NBSAssetName" class="control-label"></label>
                <input asp-for="NBSAssetName" class="form-control" />
                <span asp-validation-for="NBSAssetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <select asp-for="SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssetStatus" class="control-label"></label>
                <select asp-for="AssetStatusId" class="form-control" asp-items="ViewBag.AssetStatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssetType" class="control-label"></label>
                <select asp-for="AssetTypeId" class="form-control" asp-items="ViewBag.AssetTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssetBrand" class="control-label"></label>
                <select asp-for="AssetBrandId" class="form-control" asp-items="ViewBag.AssetBrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MACAddress" class="control-label"></label>
                <input asp-for="MACAddress" class="form-control" />
                <span asp-validation-for="MACAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Connectivity" class="control-label"></label>
                <input asp-for="Connectivity" class="form-control" />
                <span asp-validation-for="Connectivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalIP" class="control-label"></label>
                <input asp-for="LocalIP" class="form-control" />
                <span asp-validation-for="LocalIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ethernet1LLDP" class="control-label"></label>
                <input asp-for="Ethernet1LLDP" class="form-control" />
                <span asp-validation-for="Ethernet1LLDP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ethernet1" class="control-label"></label>
                <input asp-for="Ethernet1" class="form-control" />
                <span asp-validation-for="Ethernet1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-action="ListNBSAssets">Back to NBS assets</a>
</div>

