@model NBSTimeReporting.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "ListPersonTypes";
}

<h1>Person Types</h1>

<a class="btn btn-sm btn-success" asp-controller="PersonTypes" asp-action="Create">Create new type</a>
<a class="btn btn-sm btn-success" asp-controller="Home" asp-action="People">Back to People</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonTypes[0].PersonTypeName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonTypes.OrderBy(p => p.PersonTypeName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonTypeName)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="PersonTypes" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="PersonTypes" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="PersonTypes" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>