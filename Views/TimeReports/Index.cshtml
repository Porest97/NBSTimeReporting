@model IEnumerable<NBSTimeReporting.TimeReportingExternal.DataModels.TimeReport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncidentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkedHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeeHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Site.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncidentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftStarted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftEnded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkedHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeeHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
