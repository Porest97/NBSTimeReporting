@model NBSTimeReporting.Models.DataModels.Report

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReportStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReportStatus.ReportStatusName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReportType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReportType.ReportTypeName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Emloyee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emloyee.FullName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Site)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Site.SiteName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ticket)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ticket.IncidentNumber)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeStarted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeStarted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTimeEnded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTimeEnded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkHours)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkHours)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
        <a class="btn btn-sm btn-success" asp-action="ListReports">Back to Reports</a>
    </form>
</div>
