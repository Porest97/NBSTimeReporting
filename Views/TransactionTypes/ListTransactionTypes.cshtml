@model NBSTimeReporting.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "ListTransactionTypes";
}

<h1>Transaction Types</h1>

<a class="btn btn-sm btn-success" asp-controller="TransactionTypes" asp-action="Create">Create new type</a>
<a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Accounting">Back to Accounting</a>

<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionTypes[0].TransactionTypeName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TransactionTypes.OrderBy(tr => tr.TransactionTypeName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionTypeName)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="TransactionTypes" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="TransactionTypes" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="TransactionTypes" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>