                @Html.DisplayNameFor(model => model.Site)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
