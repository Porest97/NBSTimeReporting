@model NBSTimeReporting.Models.AccountingModels.EmployeeAccount

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AccountStatusId" class="control-label"></label>
                <select asp-for="AccountStatusId" class="form-control" asp-items="ViewBag.AccountStatusId"></select>
                <span asp-validation-for="AccountStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAccountDescription" class="control-label"></label>
                <input asp-for="EmployeeAccountDescription" class="form-control" />
                <span asp-validation-for="EmployeeAccountDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-action="ListEmployeeAccounts">Back to Employee Accounts</a>
</div>

