@model NBSTimeReporting.Models.SettingModels.ReportType

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ReportType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReportTypeName" class="control-label"></label>
                <input asp-for="ReportTypeName" class="form-control" />
                <span asp-validation-for="ReportTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-action="ListReports">Back to Reports</a>
</div>

