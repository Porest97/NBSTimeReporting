@model IEnumerable<NBSTimeReporting.Models.AccountingModels.MonthlyTimeReport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReportStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WTR1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WTR2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WTR3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WTR4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WTR5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalTimeWorked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportStatus.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WTR1.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WTR2.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WTR3.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WTR4.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WTR5.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTimeWorked)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
