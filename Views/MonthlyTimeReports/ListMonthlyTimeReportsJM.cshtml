@model NBSTimeReporting.Models.ViewModels.MonthlyTimeReportsViewModel
@{
    ViewData["Title"] = "ListMonthlyTimeReportsJM";
}

<h1>Monthly Timereports: Jones Moti</h1>

<h4>Hours: @Model.MonthlyTimeReports.Sum(mtr => mtr.TotalTimeWorked)</h4>




<a class="btn btn-sm btn-success" asp-controller="MonthlyTimeReports" asp-action="Create">Create new Monthly Report</a>
<a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Reporting">Back to Reporting</a>


<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyTimeReports[0].ReportStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyTimeReports[0].Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyTimeReports[0].FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyTimeReports[0].ToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyTimeReports[0].WTR1.Emloyee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyTimeReports[0].TotalTimeWorked)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MonthlyTimeReports.OrderBy(mtr => mtr.FromDate))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportStatus.ReportStatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Month)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WTR1.Emloyee.CName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalTimeWorked)
                </td>

                <td>
                    <a class="btn btn-sm btn-success" asp-controller="MonthlyTimeReports" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-success" asp-controller="MonthlyTimeReports" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="MonthlyTimeReports" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h3>Work notes !</h3>
<textarea id="TextArea1" rows="20" cols="150"></textarea>