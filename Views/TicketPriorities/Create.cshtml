@model NBSTimeReporting.Models.SettingModels.TicketPriority

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TicketPriority</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketPriorityName" class="control-label"></label>
                <input asp-for="TicketPriorityName" class="form-control" />
                <span asp-validation-for="TicketPriorityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-action="ListTicketPriorities">Back to Ticket priorities</a>
</div>

